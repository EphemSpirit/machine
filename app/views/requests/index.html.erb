<%= render 'shared/user_info' %>

<div class="container mx-auto text-center mb-4 w-2/5 py-4">
  <% @requests.each do |request| %>
  <div class="bg-white shadow-md px-4 py-2">
    <%= link_to request.sender.name, user_path(request.sender), class: "underline font-bold" %> sent you a friend request
    <div>
      <%= button_to "Accept", friendships_path(friendship: { friender_id: request.sender.id, friendee_id: current_user.id }), class: "text-sm bg-blue-300 rounded mt-2 px-4 py-2" %>
      <button class="text-sm bg-blue-300 rounded mt-2 px-4 py-2">
        Deny
      </button>
    </div>
  </div>
  <% end %>
</div>
