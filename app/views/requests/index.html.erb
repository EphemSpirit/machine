<h2 class="ui centered header">Pending Requests</h2>

<div class="ui internally celled grid">
  <div class="ui four wide column">
    <%= render 'shared/current_user_info' %>
  </div>

  <div class="ui eight wide centered column">
    <% @requests.each do |request| %>
      <div class="ui cards">
        <div class="card">
          <div class="image">
            <%= image_tag request.sender.profile.profile_pic %>
          </div>
          <div class="content">
            <div class="header">
              <%= link_to request.sender.name, user_path(request.sender) %> sent you a request!
            </div>
          </div>
          <div class="extra content">
            <div class="ui two buttons">
              <%= link_to "Accept", user_friendships_path(user_id: current_user.id,
                                                             friendship: { friender_id: request.sender.id, friendee_id: current_user.id }), method: :post,
                                                             class: "ui positive button", data: { confirm: "Accept this person as a friend?" } %>
              <%= link_to "Deny", user_request_path(current_user.id, request), method: :patch, class: "ui negative button" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
