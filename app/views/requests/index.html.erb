<%= render 'shared/current_user_info' %>

<div class="container mx-auto text-center mb-4 w-2/5 py-4">
  <% @requests.each do |request| %>
  <div class="bg-white shadow-md px-4 py-2">
    <%= link_to request.sender.name, user_path(request.sender), class: "underline font-bold" %> sent you a friend request
    <div>
      <button>
        <%= button_to "Accept", user_friendships_path(user_id: current_user.id,
                                                      friendship: { friender_id: request.sender.id, friendee_id: current_user.id }),
                                                      class: "text-sm bg-blue-300 rounded mt-2 px-4 py-2" %>
      </button>
      <div>
        <button>
          <%= button_to "Deny", user_request_path(current_user.id, request), method: :patch,
                                                                             class: "text-sm bg-blue-300 rounded mt-2 px-4 py-2" %>
        </button>
      </div>
    </div>
  </div>
  <% end %>
</div>
