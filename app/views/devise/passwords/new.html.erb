<div class="main-page">
  <div class="flex-custom-container sign-in-form">
    <h1 class="ui center aligned header">Password Reset</h1>
    <h3 class="ui center aligned header">Forgot Your Password?</h3>
    <h3 class="ui center aligned header">Enter Your Email and You Can Make a New One!</h3>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "ui form" }) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <div class="field">
        <div class="ui input">
          <%= f.email_field :email, autofocus: true, placeholder: "email@example.com" %>
        </div>
      </div>
      <%= f.submit "Email Reset Link", class: "ui blue submit button" %>
    <% end %>
  </div>
</div>

