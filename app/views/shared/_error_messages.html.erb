<% if flash[:notice] %>
  <div class="ui info message">
    <i class="close icon"></i>
    <div class="header">
      <%= notice %>
    </div>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="ui negative message">
    <i class="close icon"></i>
    <div class="header">
      <%= alert %>
    </div>
  </div>
<% end %>
