<div class="ui left floated card">
  <% if @user.profile.profile_pic.attached? %>
    <%= image_tag @user.profile.display_image %>
  <% end %>
  <div class="content">
    <div class="header">
      <%= current_user.name %>
    </div>
    <p><%= current_user.profile.bio %></p>
  </div>
  <div class="extra content">
    <div class="ui vertical buttons">
      <div class="ui basic green button">
        <%= link_to "Friends: ", user_friendships_path(@user) %><%= "#{total_friends(current_user)} total" %>
      </div>
      <div class="ui basic green button">
        <%= link_to "Send Friend Request", user_requests_path(user_id: current_user.id, request: { sender_id: current_user.id, reciever_id: @user.id }) %>
      </div>
    </div>
  </div>
</div>
