<div class="edit-page">
  <div class="flex-custom-container edit-account-form">
    <div class="ui center aligned medium header">Edit Your Profile!</div>

    <%= simple_form_for(@profile, url: user_profile_path(current_user), method: :put, local: true, html: { class: "ui form" }) do |f| %>
      <%= f.error_notification %>

      <div class="field">
        <% if current_user.profile.profile_pic.attached? %>
          <%= image_tag current_user.profile.show_image, class: "ui centered image" %>
        <% end %>
        <div class="field">
          <%= f.label :profile_pic, "Profile Picture" %>
          <div class="ui input">
            <%= f.input :profile_pic, as: :file, label: false %>
          </div>
        </div>
        <div class="field">
          <%= f.label :bio %>
          <div class="input">
            <%= f.text_area :bio, placeholder: "Write a short bio!" %>
          </div>
        </div>
        <div class="field">
          <%= f.label :birthday %>
          <div class="input">
            <%= f.input :birthday, as: :date, label: false, html5: true %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


