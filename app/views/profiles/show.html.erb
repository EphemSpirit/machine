<% if @profile.owner == current_user %>
  <%= render 'shared/current_user_info' %>
<% else %>
  <%= render 'shared/user_info' %>
<% end %>

<% if profile_owner?(@profile) %>
  <div class="container mx-auto text-center mb-4 w-2/5 py-4 border border-black h-48">
    <%= render 'shared/posts_form' %>
  </div>
<% end %>

